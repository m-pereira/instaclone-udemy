<%= turbo_stream.update "comment-form-#{@post.id}" do %>
  <%= render 'comments/form', post: @post %>
<% end %>

<%= turbo_stream.update "post-#{@post.id}-comments-list" do %>
  <%= render 'comments/list', post: @post %>
<% end %>

<%= turbo_stream.update "post-#{@post.id}-comments-count" do %>
  <%= pluralize(@post.comments.size, "comment") %>
<% end %>
